# Database Configuration
MONGODB_URI=mongodb://localhost:27017/videomax
MONGODB_URI_PROD=mongodb+srv://username:password@cluster.mongodb.net/videomax

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRE=7d

# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Server Configuration
NODE_ENV=development
PORT=5000

# Netlify Configuration
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_ACCESS_TOKEN=your-netlify-access-token

# Admin Configuration
ADMIN_EMAIL=admin@videomax.com
ADMIN_PASSWORD=secure-admin-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=100000000
ALLOWED_FILE_TYPES=video/mp4,video/avi,video/mov,video/wmv

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password